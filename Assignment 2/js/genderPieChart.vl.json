{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 100,
  "height": 400,
  "title": "Gender ratio of Nobel Prize recipients by category",
  "data": {
    "url": "https://raw.githubusercontent.com/cooperchestney/FIT3179/main/Assignment%202/data/nobelwinners.csv"
  },
  
  "autosize2": {"contains": "padding", "resize": true, "type": "fit"},
  "width": 'container',
  
  "mark": {"type": "arc", "innerRadius": 30},
  "encoding": {
    "column": {"field": "category"},
    "theta": {"field": "gender", "type": "nominal", "aggregate": "count"},
    "color": {"field": "gender", "type": "nominal"},
    "tooltip": [
      {"field": "gender", "type": "nominal", "title": "Gender"},
      {
        "field": "gender",
        "type": "nominal",
        "aggregate": "count",
        "title": "Number of prize winners"
      }
    ]
  }
}
